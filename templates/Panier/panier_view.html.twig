{% extends 'Layouts/base_without_menu.html.twig' %}
{% block title %}
    Gestion du Panier
{% endblock %}
{% block titre %}
    Panier
{% endblock %}

{% block content %}
        <h2>Panier de {{client.login}}</h2>
        {%if PGs != []%}
        <ul>
            {% for pg in PGs%}
                <li>
                    <ul>
                        <li>Race : {{pg.goat.Race}}</li>
                        <li>Prix par unité : {{ pg.goat.price }}</li>
                        <li>Quantité : {{ pg.quantite }}</li>
                        <li>Prix du groupe : {{ pg.goat.price*pg.quantite}}</li>
                        {% set URLRemPanier = path('panier_remove',{'idGoat' : pg.goat.id}) %}
                        <li><a href="{{ URLRemPanier }}">Supprimer du panier</a></li>
                    </ul>
                </li>
            {%endfor%}
        </ul>
    {%endif%}
    <p>Prix total : {{ panier.totalprice }}</p>
    {% set URLDelPanier = path('panier_vider') %}
    {% set URLMoarGoat = path('goat_list') %}
    <a href="{{ URLDelPanier }}">Vider panier</a>
    <a href="{{ URLMoarGoat }}">Plus de chèvre</a>
{% endblock %}