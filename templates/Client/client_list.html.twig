{% extends 'Layouts/base.html.twig' %}
{% block title %}
    Gestion des utilisateurs
{% endblock %}
{% block titre%}
Liste des utilisateurs
{% endblock %}

{% block content %}
    <table>
        <tr>
            <th>Login</th>
            <th>Mot de passe</th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Date de Naissance</th>
            <th>Statut</th>
        </tr>
        {% for user in users %}
            <tr>
                <td> {{ user.login }} </td>
                <td> {{ user.password }} </td>
                <td> {{ user.name }} </td>
                <td> {{ user.surname }} </td>
                <td> {{ user.dateBirth|date('Y-m-d') }} </td>
                <td>
                    {%for role in user.roles %}
                        {{ role }}
                    {%endfor%}
                </td>
                {% if not("ROLE_SUPERADMIN" in user.roles) %}
                    {% set URLDel = path('security_compte_delete',{'id' : user.id}) %}
                    <td> <a href="{{ URLDel }}">Supprimer</a> </td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}